# Production Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Production PostgreSQL database URL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Alternative: Individual DB connection parameters
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=medtechai_prod
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# JWT Secret (use a strong, random secret key)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars

# Session configuration
SESSION_SECRET=your-session-secret-key

# ========================================
# API KEYS (PRODUCTION)
# ========================================
# OpenAI API Key - REQUIRED for AI features
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# FDA API Key (for drug information)
FDA_API_KEY=your-fda-api-key-here

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=https://yourdomain.com

# ========================================
# SECURITY SETTINGS
# ========================================
# CORS allowed origins (comma-separated)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting (production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/medtechai-prod.log

# ========================================
# SSL & HTTPS
# ========================================
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# ========================================
# MONITORING & HEALTH CHECKS
# ========================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
